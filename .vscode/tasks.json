{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ISOTP Console Playground",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g", // Include debugging symbols
                "-o",
                "${workspaceFolder}/console-playground/console-playground.exe",
                "${workspaceFolder}/console-playground/main.c",
                "${workspaceFolder}/ISOTPSession.c",
                "${workspaceFolder}/ISOTPConversions.c",
                "-I",
                "${workspaceFolder}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build ISOTP console playground application."
        },
        {
            "label": "Run ISOTP Console Playground",
            "type": "shell",
            "command": "${workspaceFolder}/console-playground/console-playground.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Build ISOTP Console Playground",
            "problemMatcher": []
        }
    ]
}